<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <SurfaceView
        android:id="@+id/localVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <FrameLayout
        android:id="@+id/remoteVideoView"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.45"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintDimensionRatio="@string/remote_video_default_dimension_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        android:padding="12dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llBeautyOptions"
        android:src="@drawable/ic_settings"/>

    <ImageView
        android:id="@+id/ivBeauty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        android:padding="12dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toStartOf="@id/ivMirror"
        app:layout_constraintBottom_toTopOf="@id/llBeautyOptions"
        android:src="@mipmap/ic_beauty"/>

    <ImageView
        android:id="@+id/ivMirror"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        android:padding="12dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toStartOf="@id/ivCamera"
        app:layout_constraintBottom_toTopOf="@id/llBeautyOptions"
        android:src="@drawable/ic_mirror"/>

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        android:padding="12dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toStartOf="@id/ivSetting"
        app:layout_constraintBottom_toTopOf="@id/llBeautyOptions"
        android:src="@drawable/ic_camera"/>

    <LinearLayout
        android:id="@+id/llBeautyOptions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <CheckedTextView
            android:id="@+id/ctvFaceBeauty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="美颜"
            android:textAlignment="center"
            android:textColor="@color/beauty_option_text_color" />

        <CheckedTextView
            android:id="@+id/ctvMarkup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="美妆"
            android:textAlignment="center"
            android:textColor="@color/beauty_option_text_color" />

        <CheckedTextView
            android:id="@+id/ctvSticker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="贴纸"
            android:textAlignment="center"
            android:textColor="@color/beauty_option_text_color" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>