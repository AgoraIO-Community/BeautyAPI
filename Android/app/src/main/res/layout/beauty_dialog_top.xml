<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingHorizontal="20dp"
    android:theme="@style/Theme.Material3.Dark">

    <TextView
        android:id="@+id/tvStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/beauty_strength"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:valueFrom="0"
        android:valueTo="1"
        app:labelBehavior="floating"
        app:labelStyle="@style/beauty_slider"
        app:thumbColor="@color/white"
        app:trackColorActive="#7A59FB"
        app:trackColorInactive="#CCFFFFFF"
        app:trackHeight="4dp"
        tools:value="0.5" />

    <ImageView
        android:id="@+id/ivCompare"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/bg_beauty_btn"
        android:padding="6dp"
        android:src="@mipmap/ic_beauty_compare"
        tools:visibility="gone" />


</LinearLayout>